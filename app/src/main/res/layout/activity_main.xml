<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>


    </data>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">


        <ImageView
            android:id="@+id/imagen"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:adjustViewBounds="true"
            android:src="@drawable/df"

            />

        <TextView
            android:id="@+id/tit_nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imagen"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"


            android:layout_marginBottom="8dp"
            android:text="Nombre:"
            android:textColor="#008DFD"
            android:textSize="26sp" />

        <EditText
            android:id="@+id/txt_nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tit_nombre"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:hint="Ingrese su nombre"
            android:padding="16dp"
            android:textColorHint="#FF1F1F" />

        <TextView
            android:id="@+id/tit_contra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_nombre"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"

            android:layout_marginBottom="8dp"
            android:text="Clave:"
            android:textColor="#008DFD"
            android:textSize="26sp" />

        <EditText
            android:id="@+id/txt_contrasenia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tit_contra"
            android:hint="Ingrese su clave"
            android:inputType="textPassword"
            android:padding="16dp"
            android:textColorHint="#FF1F1F" />

        <TextView
            android:id="@+id/tit_repetir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_contrasenia"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="Verificar clave:"
            android:textColor="#008DFD"
            android:textSize="26sp" />

        <EditText
            android:id="@+id/txt_repetirclave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tit_repetir"
            android:hint="Verifique su clave"
            android:inputType="textPassword"
            android:padding="16dp"
            android:textColorHint="#FF1F1F" />

        <Button
            android:id="@+id/btn_ingresar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_repetirclave"
            android:layout_marginStart="8dp"


            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="Ingresar" />

        <TextView
            android:id="@+id/txt_resultado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_ingresar"
            android:textSize="26sp"

            />
    </RelativeLayout>
</layout>